<div class="flex gap-2 mb-5 text-sm">
  <a href="/datasiswa" class="text-blue-500">Data Siswa</a>
  <a href="">/ Detail</a>
</div>

<div class="mb-8">
  <h1 class="mb-1 text-2xl font-medium text-primary">Detail Siswa</h1>
  <p class="text-sm font-light lowercase">Detail <%= data.nama %></p>
</div>

<div class="px-8 py-8 bg-white rounded-lg shadow-shadowcus">
  <div class="flex justify-between gap-10">
    <div class="flex flex-col w-[30%] border-r border-black pr-8">
      <img src="/img/ucok.svg" alt="" />
      <h1 class="mt-2 text-center">Foto Siswa</h1>
    </div>
    <div class="w-[80%] flex flex-col pr-4">
      <div class="flex flex-col pb-2 border-b border-slate-500">
        <h1 class="text-xl font-medium"><%= data.nama %></h1>
        <p class="text-sm font-light">Dibawah Berikut Adalah Detail Siswa</p>
      </div>
      <div class="flex items-start justify-between mt-6">
        <div class="flex flex-col w-[45%] gap-5">
          <div class="flex flex-col gap-1">
            <label for="kelas">Kelas :</label>
            <input
              type="text"
              disabled
              placeholder="<%= data.kelas %> <%= data.nama_jurusan %> <%= data.subkelas %>"
              class="w-full px-2 py-1 text-white bg-white border rounded-md border-slate-600 placeholder:text-black placeholder:bg-white placeholder:text-sm text-wrap"
            />
            <input type="hidden" value="<%= data.id_siswa %>" name="id_siswa" id="" />
          </div>
          <div class="flex flex-col gap-1">
            <label for="kelas">Alamat Tinggal :</label>
            <input
              type="text"
              disabled
              placeholder="<%= data.alamat %>"
              class="w-full px-2 py-1 text-white bg-white border rounded-md border-slate-600 placeholder:text-black placeholder:bg-white placeholder:text-sm text-wrap"
            />
          </div>
          <div class="flex flex-col gap-1">
            <label for="kelas">Email :</label>
            <input
              type="text"
              disabled
              placeholder="<%= data.email %> "
              class="w-full px-2 py-1 text-white bg-white border rounded-md border-slate-600 placeholder:text-black placeholder:bg-white placeholder:text-sm text-wrap"
            />
          </div>
          <div class="flex flex-col gap-1">
            <label for="kelas">Nama Wali :</label>
            <input
              type="text"
              disabled
              placeholder="<%= data.nama_wali %> "
              class="w-full px-2 py-1 text-white bg-white border rounded-md border-slate-600 placeholder:text-black placeholder:bg-white placeholder:text-sm text-wrap"
            />
          </div>
          <div class="flex flex-col gap-1">
            <label>Aksi :</label>
            <div class="flex items-center gap-2">
              <a href="/detailpelanggaran/<%= data.id_siswa %>" class="px-3 py-2 text-sm text-white transition-all bg-red-500 rounded-lg hover:bg-red-700">Pelanggaran</a>
              <a href="/detailprestasi/<%= data.id_siswa %>" class="px-3 py-2 text-sm text-white transition-all bg-green-500 rounded-lg hover:bg-green-700">Prestasi</a>
              <a href="/editsiswa/<%= data.id_siswa %>" class="px-3 py-2 text-sm text-white transition-all bg-green-700 rounded-lg hover:bg-green-900">Edit</a>
            </div>
          </div>
        </div>
        <div class="flex flex-col w-[45%] gap-5">
          <div class="flex flex-col gap-1">
            <label for="kelas">No Absen :</label>
            <input
              type="text"
              disabled
              placeholder="<%= data.nomor_absen %> "
              class="w-full px-2 py-1 text-white bg-white border rounded-md border-slate-600 placeholder:text-black placeholder:bg-white placeholder:text-sm text-wrap"
            />
          </div>
          <div class="flex flex-col gap-1">
            <label for="kelas">Nomor Telpon :</label>
            <input
              type="text"
              disabled
              placeholder="<%= data.no_telp %> "
              class="w-full px-2 py-1 text-white bg-white border rounded-md border-slate-600 placeholder:text-black placeholder:bg-white placeholder:text-sm text-wrap"
            />
          </div>
          <div class="flex flex-col gap-1">
            <label for="kelas">NIS :</label>
            <input
              type="text"
              disabled
              placeholder="<%= data.nis %> "
              class="w-full px-2 py-1 text-white bg-white border rounded-md border-slate-600 placeholder:text-black placeholder:bg-white placeholder:text-sm text-wrap"
            />
          </div>
          <div class="flex flex-col gap-1">
            <label for="kelas">Kontak Wali :</label>
            <input
              type="text"
              disabled
              placeholder="<%= data.kontak_wali %> "
              class="w-full px-2 py-1 text-white bg-white border rounded-md border-slate-600 placeholder:text-black placeholder:bg-white placeholder:text-sm text-wrap"
            />
          </div>
          <div class="flex flex-col gap-1">
            <label for="kelas" class="font-medium text-secondary">Total Point :</label>
            <input
              type="text"
              disabled
              placeholder="<%= data.point %> "
              class="w-full px-2 py-1 text-white border border-none rounded-md outline-none bg-primary placeholder:text-white placeholder:text-sm text-wrap"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-8">
  <a href="/datasiswa" class="text-sm font-medium text-blue-500">Kembali</a>
</div>

<% if(result=== true) { %>

<!-- Open the modal using ID.showModal() method -->

<dialog id="my_modal_1" open class="modal">
  <div class="modal-box">
    <h3 class="text-xl font-bold text-secondary">Data Siswa Berhasil Di Ubah</h3>
    <p class="py-4">Silahkan Cek Kembali Data Siswa</p>
    <div class="modal-action">
      <form method="dialog">
        <!-- if there is a button in form, it will close the modal -->
        <button class="btn">Close</button>
      </form>
    </div>
  </div>
</dialog>

<% } %>
